<div class="new-tasks bg-accent text-dark flex">
  <div class="counter-container flex">
    <h2 class="fs-400 fw-bold"><%= taskState %></h2>
    <div class="counter"><%= taskItems.length %></div>
  </div>
  <button
    class="add-item"
    name="newitem"
    data-modal-target="#modal"
    value="<%= taskState %>"
  >
    +
  </button>
  <div class="modal flex" id="modal">
    <div class="modal-header">
      <p class="fw-bold">Enter Task</p>
      <span class="fs-400 fw-bold close-dialog-btn" data-modal-close
        >&times;</span
      >
    </div>
    <div class="modal-body">
      <form
        class="modal-form flex"
        action="
        /taskCard"
        method="post"
      >
        <input type="text" name="taskTitle" placeholder="task description" />
        <label for="in-progress">In Progress</label>
        <input type="checkbox" name="in-progess" id="in-progress" />
        <label for="completed">Completed</label>
        <input type="checkbox" name="completed" id="completed" />
        <button
          class="btn"
          name="taskbutton"
          value="<%= taskState %>"
          type="submit"
          data-form-submit
        >
          ADD
        </button>
      </form>
    </div>
  </div>
  <div id="overlay"></div>

  <!-- <div class="tasks-list-container"> -->
  <ul class="tasks">
    <li class="task-list">Create Task Manager App</li>
    <% taskItems.forEach(task=>{ %>
    <li class="task-list"><%= task.description%></li>
    <% }) %>
  </ul>
  <!-- </div> -->
</div>
